#include "SPI.h"
#include "UART.h"
#include "util/delay.h"

volatile uint8_t flag = 0;

void app(void)
{
//	_delay_ms(100);
	PORTA_DIR = UART_receive();
}

int main(void)
{
	UART_ConfigType cfg = {
			UART_ASYNCHRONOUS_MODE,
			UART_RECEIVER_MODE,
			UART_EIGHT_BITS,
			UART_PARITY_DISABLED,
			UART_ONE_STOP_BIT,
			UART_INTERRUPT_ENABLED
	};

	UART_RXC_setCallBack(&app);

	UART_init(&cfg);

	sei();

	while(1)
	{

	}
}


