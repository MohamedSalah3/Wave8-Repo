#ifndef BCM_H_
#define BCM_H_


#include "SPI.h"
#include "UART.h"

typedef struct BCM_ConfigType{
	uint8_t BCM_ProtocolID;
	uint8_t BCM_DataDirection;
}BCM_ConfigType;

typedef struct BCM_StartConfigType{
	uint8_t BCM_ProtocolID;
	uint8_t* BCM_ArrayStartAddress;
	uint8_t BCM_ArraySize;

	void (*BCM_Cbk_ptr)(void);
}BCM_StartConfigType;

#endif /* BCM_H_ */
