#include "BCM.h"

#define OVERHEAD 		4

#define ELEMENTS(X)		(X + OVERHEAD)

int main(void)
{
	uint8_t Buffer[ELEMENTS(20)];
	strBcmConfig_t cfg = {
			BCM_UART_ID,
			BCM_RECEIVE
	};

	BCM_Init(&cfg);

	sei();

	BCM_SetupRxBuffer(BCM_UART_ID, (uint8_t*)Buffer, 20);

	while(1)
	{
		BCM_RxDispatch();
		PORTA_DIR = Buffer[19];
	}
}
