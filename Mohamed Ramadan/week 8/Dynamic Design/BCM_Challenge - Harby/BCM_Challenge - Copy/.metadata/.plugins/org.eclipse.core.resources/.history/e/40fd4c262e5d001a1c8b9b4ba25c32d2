#include "SPI.h"
#include "UART.h"
#include "BCM.h"
#include "util/delay.h"

uint8_t arr[20];

int main(void)
{
	strBcmConfig_t cfg = {
			BCM_SPI_ID,
			BCM_RECEIVE
	};

	BCM_Init(&cfg);

	sei();

	BCM_SetupRxBuffer(BCM_SPI_ID, (uint8_t*)arr, 20);

	while(1)
	{
		BCM_RxDispatch();
	}
}
