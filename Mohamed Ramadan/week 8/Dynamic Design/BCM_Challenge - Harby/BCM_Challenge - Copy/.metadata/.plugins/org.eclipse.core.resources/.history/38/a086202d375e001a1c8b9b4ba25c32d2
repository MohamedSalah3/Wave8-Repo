#define BCM_CFG_H_


typedef enum{
	BCM_SENDING_IDLE,
	BCM_SENDING_BYTE,
	BCM_SENDING_SENDING_COMPLETE
}BCM_Sending_SM;

typedef enum{
	BCM_RECEIVING_IDLE,
	BCM_RECEIVING_BYTE,
	BCM_RECEIVING_COMPLETE
}BCM_Receiving_SM;

#endif /* BCM_CFG_H_ */
