/*- INCLUDES -----------------------------------------------*/

#include "BCM.h"


/*- DEFINITIONS --------------------------------------------*/

#define OVERHEAD 		4
#define ELEMENTS(X)		(X + OVERHEAD)

int main(void)
{
	uint8_t Buffer[ELEMENTS(21)];
	strBcmConfig_t cfg = {
			BCM_SPI_ID,
			BCM_RECEIVE
	};

	BCM_Init(&cfg);

	sei();

	BCM_SetupRxBuffer(BCM_SPI_ID, (uint8_t*)Buffer, sizeof(Buffer));
//	add call back to rx buffer
	while(1)
	{
		BCM_RxDispatch();
	}
}
